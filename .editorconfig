# Top-most EditorConfig file
root = true

[*]
# Ending every file with a new line
end_of_line  = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# Indentation
[*.js]
indent_style = space
indent_size = 2

[*.scss]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.html]
indent_style = tab
